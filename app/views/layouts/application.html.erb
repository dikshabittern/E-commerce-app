<!DOCTYPE html>
<html>
  <head>
    <title>ECommerce</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="https://use.fontawesome.com/releases/v5.0.4/css/all.css" rel="stylesheet">


  </head>

  <body>

    <!--Navbar -->
    
    <nav class="mb-1 navbar navbar-expand-lg navbar-dark default-color navbar-color">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent-333"
        aria-controls="navbarSupportedContent-333" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent-333">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/">Home
              <span class="sr-only">(current)</span>
            </a>
          </li>
              
          <%  if current_user.try(:role) == "admin" %>
            <li class="nav-item">
              <a class="nav-link" href="/products/new">New Product</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/products_all">Products Listing</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/categories">Category</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/orders_history">Order history</a>
            </li>
          <% end %>
           <!--  <li class="nav-item">
              <a href="" ><%#= render 'products/sidebar_menu'%></a>
            </li> -->
              
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink-333" data-toggle="dropdown"
                aria-haspopup="true" aria-expanded="false">Search product with category
              </a>
              <div class="dropdown-menu dropdown-default" aria-labelledby="       navbarDropdownMenuLink-333">
                <% Category.all.each do |f|%>
                  <a href="/category/<%= f.id %>/products" class="dropdown-item">
                      <%= f.name %><br>
                  </a>
                <% end %>
              </div>
            </li>
        </ul>

        <!-- Search Bar -->
        <div class="col-sm-4 col-md-4 pull-right">
          <%= form_tag "/products", :method=>"get" do %>
            <div class="input-group">
              <%= text_field_tag :search, nil, :placeholder=>"Search for products", class: 'form-control' %>
              <button class="btn btn-default input-group-btn" type="submit"><i class="glyphicon glyphicon-search"></i></button>
            </div>
            <!-- <div class="input-group-btn">
              
            </div> -->
          <% end %>
          <!-- <form class="navbar-form" role="search">
            <div class="input-group">
                  <input type="text" class="form-control" placeholder="Search for products" name="srch-term" id="srch-term">
                  <div class="input-group-btn">
                      <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                  </div>
            </div>
          </form> -->
        </div>




        <!--  -->
        <ul class="navbar-nav ml-auto nav-flex-icons">
          
          <li class="nav-item">
            <a class="nav-link" href="/wishlist"><li><i class="fa fa-heart"></i><span class="badge"><%= current_user.wishlists.count rescue nil %></span></li></a>
          </li>
          <li class="nav-item">
            <a class="nav-link waves-effect waves-light" href="/cart">
              <li><i class="glyphicon glyphicon-shopping-cart"></i><%= current_user.carts.count rescue nil %></li>
            </a>
          </li>
          <!-- User Authentication -->
            <% if user_signed_in? %>
                <strong class= "fas fa-user"><%= current_user.email %></strong>&nbsp;&nbsp;&nbsp;
                <i class="fas fa-edit"> <%= link_to 'Edit profile', edit_user_registration_path, :class=> 'navbar-link'%></i> &nbsp;&nbsp;&nbsp;
                <i class="fas fa-log-out"><%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %></i>
            <% else %>
                <i class="fas fa-sign-in"><%= link_to "Sign up", new_user_registration_path, :class => 'fa fa-sign-in '  %></i>&nbsp;&nbsp;&nbsp;
                <i class="fas fa-sign-out"><%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %></i>
            <% end %>
          <!--  -->
          
        </ul>
      </div>
    </nav>
<!--/.Navbar -->
    <%= yield %>
  </body>
</html>


<style type="text/css">
  .navbar-color
{
  background-color: darkcyan;
}
</style>
