<h4 class="order_header text-center">Orders History</h4><br>
<table class="table table-hover" id="example">
  <thead>
    <tr>
      <th>Product Name</th>
      <th>Date&Time</th>
      <th>Price</th>
      <th>Address</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%# @cart_itemsr1 = current_user.orders.where(cart_id: current_user.cart.id).first %>
    <%# @cart_itemsr2 = @cart_itemsr1.cart %>
    <%# @cart_itemsr = @cart_itemsr2.cart_items %>
    <% @cart_items.each do |cart_item| %>
    <%#byebug %>

      <tr>
        <!-- <td>Order: <%#= cart_item.product.order.id %></td> -->
        <td><%= cart_item.product.name %></td>
        <td><%= Time.now.strftime "%a, %-d %b %Y %I:%M %p " %></td>
        <td><%= cart_item.product.price %></td>
        <%# byebug %>
        <% @add = cart_item.cart.user.addresses.first %>
        <td><%= @add.address %> <%= @add.country%> <%= @add. post_code%> <%= @add. district%> </td>
        <td><%= cart_item.quantity %></td>
        <!-- <td><%#= image_tag cart_item.product.image.url(:thumb) %></td> -->
        <!-- <td><%#= cart_item.product.total || 0.0 %></td> -->
        <!-- <td>N- <%#= order.total || 0.0 %></td>
        <td><%#= time_ago_in_words(order.created_at, include_seconds: true) + " ago" %></td>
        
        <td><%#= order.stripe_email%></td>
        <td><%#= order.status %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

  <div class="text-center">Total Price: <%#= number_to_currency(@cart_items.total_price)%></div>
 
<script type="text/javascript">
  $('#example').DataTable({
    dom: 'Bfrtip',
    buttons: [
        'copy', 'excel', 'pdf', 'csv'
    ]
} );
</script>