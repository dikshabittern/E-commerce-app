<p id="notice"><%= notice %></p>
  <% if current_user.wishlists.first.nil?%>
    <center>
      <img src="http://www.parinfurniture.com/assets/images/empty-cart_ee6141.png" style="height:177px;width:177px;"><br><br>
      <h4>Empty Wishlist</h4><br>
      <strong>You have no items in your wishlist. Start Adding !</strong><br>
       <%= link_to 'Continue Shopping', root_path, :class => 'btn btn-outline-primary' %>
    </center>

  <% else %>

  <div class="container">
    <h1 class="text-center">Wishlists Products</h1><br>
  <div class="row">
    <table class="table table-hover table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Price</th>
          <th>Image</th>
          <th>Category</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.description %></td>
            <td><%= product.price %></td>
            <td><a href="/product/<%= product.id %>"><%= image_tag product.image.url(:thumb) %></a></td>
            <td><%= product.category.name %></td>
            <td><%= link_to "Remove", remove_wishlist_path(product), data: {method: :delete}  %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% end %>
  </div>   
</div><br><br><br>

