<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
<% end %>

<% if flash[:alert] %>
  <div class="alert" id ="alert"><%= flash[:alert] %></div>
<% end %>
<br>

<%= form_tag order_path do |f| %>
  <%= hidden_field_tag :cart_id, value = current_user.cart.id %>
   <div class="field">
    <%= f.label :address %><br />
    <%= f.label :address, "Yes", :value => "true"  %>
    <%= f.radio_button :address, true %>
    <%= f.label :address, "No", :value => "false" %>
    <%= f.radio_button :address, false, :checked => true %>
  </div>


  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>Amount: $--<%= %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="A month's subscription"
          data-amount="500"
          data-locale="auto"></script>

 
          
