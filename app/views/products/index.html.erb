<p id="notice"><%= notice %></p>

<h1 class="text-center">Products</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Image</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= image_tag product.image.url(:thumb) %></td>
        <td><%= product.category.name %></td>
        <td><%= link_to 'Show', product,:class => 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_product_path(product),:class => 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  <center>
  <%= will_paginate @products, :renderer=> BootstrapPagination::Rails, previous_label: "Older", next_label: "Newer", inner_window: 1, outer_window: 0 %>
</center>
<br>



<%= link_to 'New Product', new_product_path, :class => 'btn btn-info' %>

