<div class="container">
    <h3 class="h3">Product List </h3>
    <div class="row">
    <% if @products_all.present? %>
      <% @products_all.each do |product| %>
        
        <div class="col-md-3 col-sm-6">
            <div class="product-grid2">
                <div class="product-image2">
                    <a href="#">
                      <% if product.image.present? %>
                        <%= image_tag product.image.url(:thumb) %>
                      <% else %>
                        <img class="pic-1" src="http://bestjquery.com/tutorial/product-grid/demo3/images/img-1.jpeg">
                        <img class="pic-2" src="http://bestjquery.com/tutorial/product-grid/demo3/images/img-2.jpeg">
                      <% end %>
                    </a>
                    <ul class="social">
                        <li><a href="/product/<%= product.id %>" data-tip="Quick View"><i class="fa fa-eye"></i></a></li>
                        <li><%= link_to  products_add_wishlist_path(product), data: {method: :post, remote: true} do %>
                            <i class="fa fa-heart"></i>
                            <% end %>
                        </li>
                        <!-- <li><a href="#" data-tip="Add to Wishlist"><i class="fa fa-shopping-bag"></i></a></li> -->
                        
                        <li><a href="#" data-tip="Add to Cart"><i class="fa fa-shopping-cart"></i></a></li>
                    </ul>
                    <a class="add-to-cart" href="">Add to cart</a>
                </div>
                <div class="product-content">
                    <h3 class="title"><a href="#"><%= product.name %></a></h3>
                    <span class="price"><%= product.price %></span>
                </div>
            </div>
        </div>
      <% end %>
    <% end %>
    </div>
</div>
<hr>



