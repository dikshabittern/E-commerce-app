<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field col-lg-12">
    <%= form.label :Category%>
    <%= form.collection_select :category_id, Category.all, :id, 
    :name, {:prompt=> "Select a category"}, class: 'form-control', :required=> true  %>
  </div>

  <div class="field col-lg-12 from-group">
    <%= form.label :name %>
    <%= form.text_field :name , :class => "form-control", :required=> true %>
  </div>

  <div class="field col-lg-12">
    <%= form.label :description %>
    <%= form.text_field :description, :class => "form-control",:required=> true %>
  </div>

  <div class="field col-lg-12 from-group">
    <%= form.label :price %>
    <%= form.text_field :price, :class => "form-control"  %>
  </div>

  <div class="field col-lg-12 from-group">
    <%= form.label :image %>
    <%= form.file_field :image, :class => "form-control",:required=> true  %>
  </div>

  

  <!-- <div class="field col-lg-12 from-group">
    <%#= form.label :category_id %>
    <%#= form.number_field :category_id , :class => "form-control"  %>
  </div> -->

  <div class="text-center">
    <%= form.submit %>
  </div>
<% end %>
