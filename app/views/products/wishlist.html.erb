<p id="notice"><%= notice %></p>
<h1 class="text-center">Wishlists Products</h1><br>
<div class="container">

<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Image</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><a href="/product/<%= product.id %>"><%= image_tag product.image.url(:thumb) %></a></td>
        <td><%= product.category.name %></td>
        <td><%= link_to "Remove", remove_wishlist_path(product), data: {method: :delete, remote: true}  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>  


