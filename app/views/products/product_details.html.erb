<!-- Display flash error message -->
<div class="container">
    <div class="card">
      <div class="container-fliud">
        <div class="wrapper row">
          <div class="preview col-md-6">
            
            <div class="preview-pic tab-content">
              <div class="tab-pane active" id="pic-1"><img src="<%= @product.image %>" /></div>
            </div>
            
            
          </div>
          <div class="details col-md-6">
            <h3 class="product-title"><%= @product.name %></h3>
            <div class='star-rating' data-score=<%= @avg_rating %>></div>
                <strong><%= "#{@reviews.try(:size)} reviews" %></strong>

            <p class="product-description"><%= @product.description %></p>
            <h4 class="price">current price:<span>₹ <%= @product.display_price %></span> <del><span>₹ <%= @product.display_full_price %></span></del>(<%= @product.discount_percentage.to_f.round(2)%>%)</h4>
            <p class="vote"><strong>91%</strong> of buyers enjoyed this product! <strong>(87 votes)</strong></p>
            <h5 class="sizes">sizes:
              <span class="size" data-toggle="tooltip" title="small">s</span>
              <span class="size" data-toggle="tooltip" title="medium">m</span>
              <span class="size" data-toggle="tooltip" title="large">l</span>
              <span class="size" data-toggle="tooltip" title="xtra large">xl</span>
            </h5>
            <h5 class="colors">colors:
              <span class="color orange not-available" data-toggle="tooltip" title="Not In store"></span>
              <span class="color green"></span>
              <span class="color blue"></span>
            </h5>
            <div class="action">
              <button class="add-to-cart btn btn-default" type="button">add to cart</button>
              <button class="btn btn-info" type="button"><a href="/">Back</a></button>
             <button class="add-to-shopping-bag btn btn-primary" type="button"><a href="/products/<%= @product.id %>/wishlist" data-tip="Add to Wishlist"><i class="fa fa-shopping-bag"></i></a></button>
              
              
              <!--  Product show rating  -->
              <br><br>
              <!-- <div class='star-rating' data-score=<%#= @avg_rating %>></div> -->
                <!-- <em><%#= "#{@reviews.try(:size)} reviews" %></em> -->
                <% @reviews.each do |review|%>
                  <div class='star-rating' data-score=<%= review.rating %>></div><br>
                  <%= review.review %>
                  <h6><%= review.user.name %></h6><hr>

                <% end %>
                <script>
                    $('.star-rating').raty({
                      path: '/assets/',
                      readOnly: true,
                      score: function() {
                            return $(this).attr('data-score');
                    }
                  });
                </script>


              <!--  -->
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


  

  